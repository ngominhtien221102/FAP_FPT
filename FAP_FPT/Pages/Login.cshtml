@page
@model FAP_FPT.Pages.LoginModel
@{
     var errorMessage = TempData["ErrorMessage"] as string;
}

<link rel="stylesheet" href="~/css/site.css" />

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}
<div class="d-flex justify-content-center mt-5">
<div class="col-md-6">
    <div style="border: solid 1px #ccc; height: 150px;">
        <fieldset>
            <legend style="text-align: center;"><span style="color:white; padding-left:10px; padding-right: 10px; border-radius:5px" class="label label-default  btn-warning"><b>Sinh viên, Giảng viên, Cán bộ ĐH-FPT</b></span></legend>
            <br>
            <div id="loginform" class="mt-3">
                <center>
                        <div class="row d-flex justify-content-between">
                        <div class="col-sm-4">
                            <select class="btn btn-default" style="border: 1px solid #ccc;">
                                <option selected="selected" value="">Select Campus</option>
                                <option value="3">FU-Hòa Lạc</option>
                                <option value="4">FU-Hồ Chí Minh</option>
                                <option value="5">FU-Đà Nẵng</option>
                                <option value="6">FU-Cần Thơ</option>
                                <option value="7">FU-Quy Nhơn</option>
                            </select>
                        </div>
                            <div class="col-sm-4">
                                <div style="margin-left: -50px" class="g-signin2" data-onsuccess="onSignIn" data-theme="dark" data-gapiscan="true" data-onload="true">
                                        <form asp-page="Login" asp-page-handler="LoginByGoogle">
                                            <button class="btn btn-primary" type="submit">Đăng nhập</button>
                                        </form>
                                </div>
                            </div>
                        <span id="ctl00_mainContent_lblMessage" class="information"></span>
                    </div>
                    <br>
                </center>
            </div>
        </fieldset>
    </div>
</div>
</div>